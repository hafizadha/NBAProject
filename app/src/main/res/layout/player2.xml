<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="135dp"
    android:orientation="horizontal"
    android:background="@drawable/radius"
    android:layout_marginLeft="3dp"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"

        android:background="@drawable/radius" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playerNameTV"
                android:layout_width="200dp"
                android:layout_marginTop="4dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/inlanders_demo"
                android:text="Lebonbon"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="italic" />

            <ImageView

                android:id="@+id/statusicon"
                android:layout_marginTop="3dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <ImageView

                android:id="@+id/statusicon2"
                android:layout_marginTop="3dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AgeTV"
                    android:fontFamily="@font/montreg"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/HeightTV"
                    android:fontFamily="@font/montreg"
                    android:textColor="@color/black"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/WeightTV"
                    android:fontFamily="@font/montreg"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="3dp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montreg"
                    android:layout_marginLeft="3dp"
                    android:textSize="13dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/PositionTV"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montreg"
                    android:textColor="@color/black"
                    android:layout_marginLeft="3dp"
                    android:textSize="13dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/SalaryTV"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/PointsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montreg"
                    android:textSize="13dp"
                    android:layout_marginTop="1dp"

                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/AssistsTV"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montreg"
                    android:textSize="13dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/StealsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montreg"
                    android:textSize="13dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/BlocksTV"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montreg"
                    android:textSize="13dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/ReboundsTV"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montreg"
                    android:textSize="13dp"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black">

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>