<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:elevation="8dp"
    >

    <TextView
        android:background="@color/black"
        android:id="@+id/rankNumber"
        android:layout_width="35dp"
        android:layout_height="75dp"
        android:paddingTop="8dp"
        android:textSize="18dp"
        android:paddingRight="1dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:fontFamily="@font/cyberformtitleital"

        android:text="1"/>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:elevation="8dp"
        >


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playerNameTV"
                android:layout_width="223dp"
                android:fontFamily="@font/inlanders"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Lebonbon"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/rankicon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="5dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">


            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/jeju"
                android:text="Composite Score:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/scoreTV"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"

                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>



